@model MoneyBlog.DataLayer.Models.Role


<h2>Create Role</h2>

@using (Html.BeginForm("CreateUserRole", "Admin", FormMethod.Post))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.RoleName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control", placeholder = "Role Name" })
                @Html.ValidationMessageFor(model => model.RoleName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="CreateUserRole" class="btn btn-default" />
            </div>
        </div>
    </div>
}
