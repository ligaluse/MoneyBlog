@model MoneyBlog.Web.ViewModels.AccountViewModels.LoginViewModel
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SignIn</h2>

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <form action="SignIn" method="post">
            <div class="form-group">
                <label class="control-label col-md-2" for="exampleInputEmail1">Email address</label>
                @Html.EditorFor(model => model.Email)
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="exampleInputPassword1">Password</label>
                @Html.EditorFor(model => model.Password)
            </div>
            <button type="submit" class="btn">Sign in</button>
        </form>
    </div>
}
